{
    "manifest_version": 2,
	"applications": { "gecko": { "id":"@crossext", "strict_min_version":"52.0" } },
    "name": "__MSG_addon_name__",
    "description": "__MSG_addon_desc__",
    "author": "Noitidart",
    "version": "1.0",
    "default_locale": "en-US",
    "homepage_url": "https://github.com/Noitidart/Cross-Browser-Extension/",
	"icons": {
		"16": "./icon.svg",
		"48": "./icon.svg",
		"64": "./icon.svg",
		"96": "./icon.svg",
		"128": "./icon.svg",

		"20": "./icon.svg",
		"25": "./icon.svg",
		"30": "./icon.svg",
		"40": "./icon.svg",

		"19": "./icon.svg",
		"35": "./icon.svg",
		"38": "./icon.svg"
	},
    "incognito": "spanning",
    "background": { "page": "background/background.html", "persistent": true },
	"browser_action": {
		"default_icon": "./icon.svg",
		"browser_style": true,
		"default_title": "__MSG_browseraction_title__"
	},

    "permissions": ["storage", "webNavigation", "webRequest", "webRequestBlocking"]
}